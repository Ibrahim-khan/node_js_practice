{
  "extends": ["prettier", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2021 // Updated to the latest version
  },
  "env": {
    "commonjs": true,
    "node": true,
    "es2021": true // Added to enable ES2021 globals
  },
  "rules": {
    "no-console": "off", // Updated to use string syntax for consistency
    "indent": ["error", 4], // Enforced consistent 4-space indentation
    "linebreak-style": ["error", "unix"], // Enforced Unix linebreaks for cross-platform compatibility
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true
      }
    ]
  },
  "plugins": ["prettier"]
}
